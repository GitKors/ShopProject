<!DOCTYPE HTML>
<html>

<head>
  <title>SHOP PROJECT</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.1/normalize.css" />
  <link rel="stylesheet" href="/<%= process.env.ADMIN_PATH %>/css/style.css" />
</head>

<body>
    <% if (location.includes("/login")) { %>
        <header class="header">
            <div class="logo"></div>
        </header>
    <% } else { %>
        <header class="header">
            <div class="logo"></div>
    
            <div class="header-controls">
                <% if (!location.includes("/login")) { %>
                    <a class="add" href="<%= `/${process.env.ADMIN_PATH}/new-product` %>">ADD PRODUCT</a>
                <% } %>
                <a class="back" href="<%= `/${process.env.ADMIN_PATH}/auth/logout` %>">LOGOUT</a>
            </div>
        </header>
    <% } %>

    <div class="container">
        <%- body %>
    </div>
</body>

</html>